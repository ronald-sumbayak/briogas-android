<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/data_initial_loading"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:indicatorColor="@android:color/black"
        app:indicatorName="CubeTransitionIndicator"
        />
    
    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:visibility="invisible"
        >
    
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="24dp"
            >
            
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/toggle_katup_loading"
                style="@style/AVLoadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:indicatorColor="@android:color/black"
                app:indicatorName="BallScaleMultipleIndicator"
                />
            
            <Button
                android:id="@+id/toggle_katup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Buka Katup"
                android:textStyle="bold"
                />
            
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="METHANE"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    />
                
                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/methane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:donut_background_color="@android:color/white"
                    app:donut_circle_starting_degree="90"
                    app:donut_finished_color="@color/colorPrimaryDark"
                    app:donut_progress="0"
                    app:donut_text_color="@color/colorPrimaryDark"
                    />
                
            </LinearLayout>
            
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="OXYGEN"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    />
                
                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/oxygen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:donut_background_color="@android:color/white"
                    app:donut_circle_starting_degree="90"
                    app:donut_finished_color="@color/colorPrimary"
                    app:donut_progress="0"
                    app:donut_text_color="@color/colorPrimary"
                    />
                
            </LinearLayout>
            
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="OTHER"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    />
                
                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:donut_background_color="@android:color/white"
                    app:donut_circle_starting_degree="90"
                    app:donut_finished_color="@color/colorAccent"
                    app:donut_progress="0"
                    app:donut_text_color="@color/colorAccent"
                    />
                
            </LinearLayout>
            
        </LinearLayout>
    
    </LinearLayout>
    
</RelativeLayout>
